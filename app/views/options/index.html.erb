<div class="row">
  <div class="card shadow mb-4 w-50">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Opciones del sistema</h6>
    </div>
    <div class="card-body">
      <%= form_with scope: :option, url: options_path, local: true do |form| %>
        <div class="form-group row">
          <div class="col-sm-6 mb-3 mb-sm-0">
            <label>Servicio de correo electr√≥nico</label>
          </div>
          <div class="col-sm-6 mb-3 mb-sm-0 text-right">
            <%= form.check_box :value_EMAIL_SERVICE, id: 'toggle_2',
                               'data-onstyle' => 'success',
                               'data-offstyle' => 'danger',
                               'data-on' => 'Encendido',
                               'data-off' => 'Apagado'
            %>
          </div>
        </div>
        <div class="form-group row text-right">
          <div class="col-sm-12 mb-3 mb-sm-0">
            <%= form.submit 'Guardar', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
